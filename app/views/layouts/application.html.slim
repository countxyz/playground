doctype 5
html lang='en'

  head
    meta charset='utf-8' content='template language' http-equiv='content-type'
    meta name='viewport' content='width=device-width, initial-scale=1,\
      minimum-scale=1'

    title = full_title yield :title

    = stylesheet_link_tag '//fonts.googleapis.com/css?family=Merriweather'
    = stylesheet_link_tag 'application', \
      media: 'all', 'data-turbolinks-track' => true

    = javascript_include_tag 'main', 'data-turbolinks-track' => true

    = favicon_link_tag 'shared/erlenmeyer-flask.ico'
    = csrf_meta_tags

  body
    == render 'notifications'

    header#site-header role='banner'
      == render 'header'

    #content-wrapper
      == yield

      nav#site-navigation role='navigation'
        == render 'sidenav' if signed_in?

    footer#site-footer role='contentinfo'
      == render 'footer'
